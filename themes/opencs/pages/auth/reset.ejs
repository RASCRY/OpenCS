<%- include ("../../partials/head", { stylesheets: [] }) %>
<%- include ("../../partials/header") %>

<div class="hero centre-container hero-small">
    <div class="vertical-centre">
        <h1><%= helper.getLocale(locale).resetPassword %></h1>
    </div>
</div>
<div class="opencs-breadcrumbs">
    <div class="container">
        <div class="opencs-breadcrumbs-container">
            <p><a class="opencs-breadcrumb" href="/?locale=<%= locale %>"><%= helper.getLocale(locale).home %></a> / <a class="opencs-breadcrumb" href="/auth/reset?locale=<%= locale %>"><%= helper.getLocale(locale).resetPassword %></a></p>
        </div>
    </div>
</div>
<div class="login-form">
    <div class="container">
        <form class="login-form-element" action="auth/email" method="POST">
            <div class="form-group">
                <label for="emailAddress"><%= helper.getLocale(locale).emailAddress %></label>
                <input type="email" class="form-control" id="emailAddressInput" aria-describedby="emailAddress">
            </div>
            <button type="submit" class="btn btn-theme"><%= helper.getLocale(locale).resetPassword %></button>
        </form>
    </div>
</div>

<%- include ("../../partials/footer") %>